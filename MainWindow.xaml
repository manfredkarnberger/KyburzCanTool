<Window x:Class="KyburzCanTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:KyburzCanTool"
        mc:Ignorable="d"
        Title="Kyburz Canbus Tool" Height="450" Width="800">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Command Selection and Control" Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal">

                <ListBox ItemsSource="{Binding AvailableCommands}"
                         DisplayMemberPath="Command"
                         SelectedItem="{Binding SelectedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="200"
                         Height="100"
                         Margin="0,0,20,0"/>

                <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button Content="▶ Start Selected Command" 
                            Command="{Binding StartCommand}" 
                            Padding="10,5" 
                            Margin="0,0,0,5"/>
                    <Button Content="■ Stop Selected Command" 
                            Command="{Binding StopCommand}" 
                            Padding="10,5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding CanLogMessages}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rx/Tx" Binding="{Binding RxTX}" Width="50"/>
                <DataGridTextColumn Header="Command" Binding="{Binding Command}" Width="100"/>
                <DataGridTextColumn Header="CAN ID" Binding="{Binding CanID, StringFormat=X3}" Width="70"/>
                <DataGridTextColumn Header="DLC" Binding="{Binding DLC}" Width="50"/>
                <DataGridTextColumn Header="Payload (Data)" Binding="{Binding CurrentPayloadString}" Width="*"/>
                <DataGridTextColumn Header="CycleTime [ms]" Binding="{Binding CycleTime}" Width="100"/>
                <DataGridTextColumn Header="Remaining Loops" Binding="{Binding LoopCount}" Width="100"/>
                <DataGridTextColumn Header="Last RX Time" Binding="{Binding RxTime}" Width="100"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
